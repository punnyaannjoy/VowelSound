<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chiriyankandath.englishvowelssounds" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.VowelQuestionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName=".view.SelectSubjectActiivty"
            android:configChanges="screenSize">

        </activity>
        <activity
            android:name=".view.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ScoreActivity"
            android:parentActivityName=".view.SelectSubjectActiivty"

            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="screenSize">

        </activity>
        <activity
            android:name=".view.ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait"
            android:configChanges="screenSize"
            android:theme="@style/OverflowTheme">

        </activity>

        <activity
            android:name=".view.SelectSubjectActiivty"
            android:label=""
            android:screenOrientation="portrait"
            android:configChanges="screenSize">

        </activity>

    </application>

</manifest>
